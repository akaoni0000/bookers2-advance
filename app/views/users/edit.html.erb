<div class="user_info">
	<h1>User info</h1>
    <%= render "users/error_messages" %>
	  <%= form_for(@user) do |f| %>
	    <div class="form">
        <%= f.label :Name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="form">
      	<%= f.label :Image %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      <div class="form">
      	<%= f.label :Introduction %><br>
        <%= f.text_area :introduction, size:"40:20"%>
      </div>
      <div class="form">
        <%= f.submit "Update User" %>
      </div>
    <% end %>
</div>