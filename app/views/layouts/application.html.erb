<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
       <h4>Bookers</h4>
　　　　<div class="slidemenu">
                  <ul class="head">
                    <% if user_signed_in? %>
                      <li class="icon">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", user_path(current_user.id) %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to 'Users', users_path %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to 'Books', books_path %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "logout", destroy_user_session_path, method: :delete %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "search", search_path %>
                      </li>
                    <% else %>
                      <li class="icon">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", "/" %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to "About", "/home/about" %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "sign up", new_user_registration_path %>
                      </li>
                      <li class="icon">
                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "login", new_user_session_path %>
                      </li>
                    <% end %>
                  </ul>
          </div>
    </header>
    <% if notice %>
　　      <p class="notice_alert"><%= notice %></p>
    <% end %>
    <% if alert %>
         <p class="notice_alert"><%= alert %></p>
    <% end %>

   
    　　     <!-- <% if flash[:notice] %><p class="notice_alert"><%= flash[:notice] %></p><% end %> -->
        


    <%= yield %>
  </body>
</html>



